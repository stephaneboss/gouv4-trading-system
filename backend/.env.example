# ========================================
# GOUV4 Trading System - Environment Config
# ========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# Server Configuration
PORT=3000
NODE_ENV=production

# MEXC API Configuration
MEXC_API_KEY=your_mexc_api_key_here
MEXC_API_SECRET=your_mexc_api_secret_here

# API Key Encryption (AES-256)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_char_hex_encryption_key_here

# JWT Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here

# WebSocket Configuration
WS_PORT=8080
WS_HEARTBEAT_INTERVAL=30000

# Trading Configuration
TRADING_PAIRS=BTC/USDT,ETH/USDT,SOL/USDT
MAX_POSITION_SIZE=100
RISK_LIMIT_PERCENT=2

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=120

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/gouv4.log

# Akash Deployment
AKASH_NODE=https://rpc.akashnet.net
AKASH_CHAIN_ID=akashnet-2

# Dashboard
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8081
